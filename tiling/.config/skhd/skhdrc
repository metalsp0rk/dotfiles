# change window focus

# switch windows
alt - h : yabai -m window --focus west  || yabai -m display --focus west
alt - j : yabai -m window --focus south || yabai -m display --focus south || yabai -m window --focus stack.next
alt - k : yabai -m window --focus north || yabai -m display --focus north || yabai -m window --focus stack.prev
alt - l : yabai -m window --focus east  || yabai -m display --focus east
alt - b : yabai -m window --focus recent

alt - return : open -na /Applications/Alacritty.app
shift + alt - return : open -na /Applications/Alacritty.app --args --command tmux attach
alt - d : dmenu

alt - p : yabai -m window --focus stack.prev # || yabai -m display --focus prev
alt - n : yabai -m window --focus stack.next # || yabai -m display --focus next

alt - s : yabai -m display --focus west
alt - g : yabai -m display --focus east

alt - 1 : yabai -m space --focus 1
alt - 2 : yabai -m space --focus 2
alt - 3 : yabai -m space --focus 3
alt - 4 : yabai -m space --focus 4
alt - 5 : yabai -m space --focus 5
alt - 6 : yabai -m space --focus 6
# shift + alt - 1 : yabai -m 

# Maybe resize windows?

ctrl + alt - h : yabai -m window west --resize right:-20:0 2> /dev/null || yabai -m window --resize right:-20:0
ctrl + alt - j : yabai -m window north --resize bottom:0:20 2> /dev/null || yabai -m window --resize bottom:0:20
ctrl + alt - k : yabai -m window south --resize top:0:-20 2> /dev/null || yabai -m window --resize top:0:-20
ctrl + alt - l : yabai -m window east --resize left:20:0 2> /dev/null || yabai -m window --resize left:20:0

# move windows
shift + alt - j : yabai -m window --swap south || $(yabai -m window --display south; yabai -m display --focus south)
shift + alt - k : yabai -m window --swap north || $(yabai -m window --display north; yabai -m display --focus north)
shift + alt - h : yabai -m window --swap west  || $(yabai -m window --display west; yabai -m display --focus west)
shift + alt - l : yabai -m window --swap east  || $(yabai -m window --display east; yabai -m display --focus east)
alt - m : yabai -m window --swap mouse


#ctrl + alt - h : yabai -m window --resize bottom_right:-10:0
#ctrl + alt - j : yabai -m window --resize bottom_right:0:-10
#ctrl + alt - k : yabai -m window --resize bottom_right:0:10
#ctrl + alt - l : yabai -m window --resize bottom_right:10:0

# rotate windows
alt - v : yabai -m space --mirror y-axis
alt - c : yabai -m space --mirror x-axis
shift + alt - r : yabai -m space --rotate 270
alt - r : yabai -m space --rotate 90

# rebalance all windows
shift + alt - e : yabai -m space --balance

alt - f : yabai -m window --toggle zoom-fullscreen

# toggle window float
shift + alt - space : yabai -m window --toggle float --grid 4:4:1:1:2:2

alt - t  : yabai -m space --layout stack
alt - y  : yabai -m space --layout bsp
alt - u  : yabai -m space --layout float

# rebind close window
alt - q : yabai -m window --close

# bind space left and right
#ctrl - h : ~
#ctrl - l : ~
